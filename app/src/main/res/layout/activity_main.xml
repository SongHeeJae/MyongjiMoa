<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:baselineAligned="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/loginping"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_back"
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#00383434"
                android:scaleType="fitXY"
                android:src="@drawable/main_me"/>

            <ImageButton
                android:id="@+id/group"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginRight="12dp"
                android:backgroundTint="#00383434"
                android:scaleType="fitXY"
                android:src="@drawable/main_group"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginBottom="15dp">

            <ImageButton
                android:id="@+id/review"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#00383434"
                android:scaleType="fitXY"
                android:src="@drawable/main_review"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/food"
                    android:layout_width="180dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="12dp"
                    android:backgroundTint="#00383434"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_food"/>

                <ImageButton
                    android:id="@+id/shuttle"
                    android:layout_width="180dp"
                    android:layout_height="115dp"
                    android:layout_marginRight="12dp"
                    android:backgroundTint="#00383434"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_shuttle"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>