<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style
        name = "splash_background" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/login_myongji
        </item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colormain</item>
        <item name="colorControlNormal">@color/colormain</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner" >
        <item name="android:textColor">@color/coloradd_user_text</item>
    </style>

    <style name="Spinner_mod" parent="Widget.AppCompat.Light.DropDownItem.Spinner" >
        <item name="android:textColor">@color/colorinfo</item>
    </style>

</resources>
